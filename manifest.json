{
  "manifest_version": 3,
  "name": "Ads Remove",
  "version": "1.0",
  "description": "Extension Remove Ads on Website",
  "permissions": [
    "storage" 
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "assets/icon.png"
  },
  "icons": {
    "16": "assets/icon.png",
    "48": "assets/icon.png",
    "128": "assets/icon.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "script/adsList.js",
        "script/removeAds.js",
        "main.js"
      ]
    }
  ]
}